<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="164dp"
    android:layout_height="220dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:strokeColor="#202020"
    app:strokeWidth="2dp">

    <TextView
        android:id="@+id/tv_small_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/item_big_title"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/potatoes" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView_small"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/surfaceVariant">

        <ImageView
            android:id="@+id/iv_recipce_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1E81F8CF"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/default_img" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>