<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usecases.recipes.RecipeDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_name_recipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="@style/display_medium"
                    android:textColor="@color/secondary40"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ib_update"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ib_update"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/cardview_shadow_end_color"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_name_recipe"
                    app:layout_constraintEnd_toStartOf="@+id/ib_like_detail"
                    app:layout_constraintTop_toTopOf="@+id/tv_name_recipe"
                    app:srcCompat="@drawable/ic_edit_35"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/ib_like_detail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/cardview_shadow_end_color"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ib_update"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ib_update"
                    app:srcCompat="@drawable/ic_baseline_favorite_detail_35"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/iv_img_recipe"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/default_img" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textAppearance="@style/label_large"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_titleIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textAppearance="@style/title_large"
                android:textColor="@color/secondary40" />

            <TextView
                android:id="@+id/tv_Ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_titleSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textAppearance="@style/title_large"
                android:textColor="@color/secondary40" />

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>