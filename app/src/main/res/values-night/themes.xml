<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslandCook" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary80dark</item>
        <item name="colorAccent">@color/secondary80dark</item>
        <item name="colorPrimaryContainer">@color/primary30dark</item>
        <item name="colorOnPrimary">@color/primary20dark</item>
        <item name="colorOnPrimaryContainer">@color/primary90dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary80dark</item>
        <item name="colorSecondaryContainer">@color/secondary30dark</item>
        <item name="colorOnSecondary">@color/secondary20dark</item>
        <item name="colorOnSecondaryContainer">@color/secondary90dark</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary80dark</item>
        <item name="colorTertiaryContainer">@color/tertiary30dark</item>
        <item name="colorOnTertiary">@color/tertiary20dark</item>
        <item name="colorOnTertiaryContainer">@color/tertiary90dark</item>
        <!-- Others colors. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundDark</item>
        <item name="backgroundColor">@color/backgroundDark</item>
        <item name="colorOnBackground">@color/onBackgroundDark</item>
        <item name="colorSurface">@color/surfaceDark</item>
        <item name="colorOnSurface">@color/onSurfaceDark</item>
        <item name="colorSurfaceVariant">@color/surfaceVariantDark</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariantDark</item>
        <item name="colorOutline">@color/outlineLight</item>
    </style>
    <style name="splashscreen" parent="Theme.IslandCook">
        <item name="android:windowBackground">@drawable/launchscreen</item>
    </style>
</resources>