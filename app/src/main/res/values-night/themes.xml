<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslandCook" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/primary20dark</item>
        <item name="colorOnPrimaryContainer">@color/onSurfaceVariantDark</item>
        <item name="colorAccent">@color/secondary80dark</item>
        <item name="colorPrimaryContainer">@color/primary30dark</item>
        <item name="colorOnPrimary">@color/primary20dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary80dark</item>
        <item name="colorSecondaryContainer">@color/secondary30dark</item>
        <item name="colorOnSecondary">@color/secondary20dark</item>
        <item name="colorOnSecondaryContainer">@color/secondary90dark</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary80dark</item>
        <item name="colorTertiaryContainer">@color/tertiary30dark</item>
        <item name="colorOnTertiary">@color/tertiary20dark</item>
        <item name="colorOnTertiaryContainer">@color/tertiary90dark</item>
        <!-- Others colors. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundDark</item>
        <item name="backgroundColor">@color/backgroundDark</item>
        <item name="colorOnBackground">@color/onBackgroundDark</item>
        <item name="colorSurface">@color/surfaceDark</item>
        <item name="colorOnSurface">@color/onSurfaceDark</item>
        <item name="colorSurfaceVariant">@color/surfaceVariantDark</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariantDark</item>
        <item name="colorOutline">@color/outlineLight</item>
    </style>
    <style name="splashscreen" parent="Theme.IslandCook">
        <item name="android:windowBackground">@drawable/launchscreen</item>
    </style>

    /*TEXT STYLE*/
    <style name="display_large" parent="Theme.IslandCook">
        <item name="android:textSize">57sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="android:textColor">@color/secondary90dark</item>
    </style>

    <style name="display_medium">
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="android:textColor">@color/secondary90dark</item>
    </style>

    <style name="display_small">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="headline_large">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="headline_medium">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="headline_small">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="title_large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="title_medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
    </style>

    <style name="title_small">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
    </style>

    <style name="label_large">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
    </style>

    <style name="label_medium">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
    </style>

    <style name="label_small">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
    </style>

    <style name="body_large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="body_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

    <style name="body_small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>

</resources>